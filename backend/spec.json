
    {
        "openapi": "3.0.1",
        "info": {
            "title": "My API for stars",
            "version": "1.0.0"
        },
        "paths": {
            "/api/stars": {
                "get": {
                    "summary": "List all stars",
                    "responses": {
                        "200": {
                            "description": "A paged array of stars",
                            "content": {
                                "application/json": {    
                                    "schema": {
                                        "$ref": "#/components/schemas/Stars"
                                    }
                                }
                            }
                        }
                    }
                },
                "post": {
                    "summary": "Add a stars",
                    "requestBody": {
                        "required": "true",
                        "content": {
                           "application/json": {    
                                "schema": {
                                    "$ref": "#/components/schemas/StarEdit"
                                }
                            }
                        }
                    },
                    "responses": {
                        "201": {
                            "description": "Expected response to a valid request",
                            "content": {
                                "application/json": {    
                                    "schema": {
                                        "$ref": "#/components/schemas/Star"
                                    }
                                }
                            }
                        },
                        "400": {
                            "description": "Expected response to a invalid request"
                        }
                    }
                }
            },
            "/api/stars/{id}": {
                "get": {
                    "summary": "Info for a stars",
                    "parameters": [
                        {
                            "name": "id",
                            "in": "path",
                            "required": true,
                            "description": "The id of the stars to retrieve",
                            "type": "string",
                            "format": "uuid"
                        }
                    ],
                    "responses": {
                        "200": {
                            "description": "Expected response to a valid request",
                            "schema": {
                                "$ref": "#/components/schemas/Star"
                            }
                        },
                        "404": {
                            "description": "stars not found"
                        }
                    }
                },
                "delete": {
                    "summary": "Delete a stars",
                    "parameters": [
                        {
                            "name": "id",
                            "in": "path",
                            "required": true,
                            "description": "The id of the stars to delete",
                            "type": "string",
                            "format": "uuid"
                        }
                    ],
                    "responses": {
                        "204": {
                            "description": "Expected response to a valid request"
                        },
                        "404": {
                            "description": "stars not found"
                        }
                    }
                },
                "put": {
                    "summary": "Edit a stars",
                    "parameters": [
                        {
                            "name": "id",
                            "in": "path",
                            "required": true,
                            "description": "The id of the stars to edit",
                            "type": "string",
                            "format": "uuid"
                        }
                    ],
                    "requestBody": {
                        "required": "true",
                        "content": {
                           "application/json": {    
                                "schema": {
                                    "$ref": "#/components/schemas/StarEdit"
                                }
                            }
                        }
                    },
                    "responses": {
                        "200": {
                            "description": "Expected response to a valid request"
                        },
                        "404": {
                            "description": "stars not found"
                        },
                        "400": {
                            "description": "Expected response to a invalid request"
                        }
                    }
                }
            }
        },
        "components": {
            "schemas": {
                "Star": {
                    "type": "object",
                    "required": [
                        "id" , "name", "galaxy", "distance"
                    ],
                    "properties": {
                        "id": {
                            "type":"string",
                            "format": "uuid"
                        },
                        "name": { 
                            "type": "string"
                        },
                        "galaxy": { 
                            "type": "string"
                        },
                        "distance": { 
                            "type": "float"
                        }
                    }
                },
                "StarEdit": {
                    "type": "object",
                    "required": [
                         "name", "galaxy", "distance"
                    ],
                    "properties": {
                        
                        "name": { 
                            "type": "string"
                        },
                        "galaxy": { 
                            "type": "string"
                        },
                        "distance": { 
                            "type": "float"
                        }
                    }
                },
                "Stars": {
                    "type": "array",
                    "items": {
                        "$ref": "#/components/schemas/Star"
                    }
                }
            }
        }
    }
